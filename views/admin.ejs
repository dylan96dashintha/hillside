        </head>
    
        <body>
            <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col">OrderId</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Mobile Number</th>
                    <th scope="col">pavement</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i <count; i++) { %>
                        <tr>
                           
                            <td><%= orderId[i] %></td>  
                            <td><%= firstname[i] %></td>
                            <td><%= lastname[i] %></td>
                            <td><%= address[i] %></td>
                            <td><%= mobilenum[i] %></td>
                            <td><%=pavement[i] %></td>
                            <td>  
                                <form action="/pavement" method="POST">
                                    <button type="submit" class="btn btn-success" value="<%= orderId[i] %>" name="pay">Pay</button>
                                </form>
                            </td>
                            
                            <td>
                                <form action="/deleteRecord" method="POST">
                                    <button type="submit" class="btn btn-danger" value="<%= orderId[i] %>" name="del">Delete</button>
                                </form>
                            </td>
                            
                          
                          
                        </tr>
                     <% } %>                </tbody>
                </table>

            
